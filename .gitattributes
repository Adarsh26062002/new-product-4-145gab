* text=auto

# Explicitly declare text files that should always use LF line endings on checkout
*.{js,jsx,ts,tsx,json,css,scss,md} text eol=lf

# Declare binary files that should not be modified
*.{png,jpg,jpeg,gif,svg,ico,webp} binary
*.{eot,ttf,woff,woff2} binary

# Ensure shell scripts use LF
*.sh text eol=lf

# Ensure batch scripts use CRLF
*.bat text eol=crlf

# Treat lockfiles as binary to prevent merge conflicts
package-lock.json binary
yarn.lock binary